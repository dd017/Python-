import pyttsx3
import speech_recognition as sr
import datetime
import requests
import pywhatkit as kit
import webbrowser

# Initialize the text-to-speech engine
engine = pyttsx3.init()

def speak(text):
    """Convert text to speech and speak it."""
    engine.say(text)
    engine.runAndWait()

def listen():
    """Listen for a voice command and return it as text."""
    recognizer = sr.Recognizer()
    with sr.Microphone() as source:
        print("Listening...")
        recognizer.adjust_for_ambient_noise(source)
        audio = recognizer.listen(source)
        try:
            command = recognizer.recognize_google(audio)
            print(f"Recognized command: {command}")
            return command.lower()
        except sr.UnknownValueError:
            speak("Sorry, I did not understand what you said.")
        except sr.RequestError:
            speak("Sorry, I am having trouble connecting to the speech recognition service.")
        return ""

def tell_time():
    """Tell the current time."""
    now = datetime.datetime.now().strftime("%H:%M")
    speak(f"The current time is {now}")

def open_website(url):
    """Open a website in the default web browser."""
    speak(f"Opening {url}")
    webbrowser.open(url)

def search_google(query):
    """Perform a Google search for the given query."""
    speak(f"Searching Google for {query}")
    kit.search(query)

def get_weather(city, api_key):
    """Get the current weather for the specified city."""
    base_url = "http://api.openweathermap.org/data/2.5/weather"
    params = {
        'q': city,
        'appid': api_key,
        'units': 'metric'
    }
    response = requests.get(base_url, params=params)
    if response.status_code == 200:
        data = response.json()
        temp = data['main']['temp']
        description = data['weather'][0]['description']
        weather_info = f"The current temperature in {city} is {temp} degrees Celsius with {description}."
        speak(weather_info)
    else:
        speak("Sorry, I couldn't retrieve the weather information.")

def main():
    api_key = "YOUR_OPENWEATHERMAP_API_KEY"  # Replace with your OpenWeatherMap API key
    speak("Hello, I am your virtual assistant. How can I help you today?")
    
    while True:
        command = listen()

        if "time" in command:
            tell_time()
        elif "open" in command:
            url = command.replace("open", "").strip()
            open_website(url)
        elif "search" in command:
            query = command.replace("search", "").strip()
            search_google(query)
        elif "weather" in command:
            city = command.replace("weather", "").strip()
            get_weather(city, api_key)
        elif "exit" in command or "stop" in command or "quit" in command:
            speak("Goodbye!")
            break
        else:
            speak("I'm sorry, I didn't catch that. Please say it again.")

if __name__ == "__main__":
    main()
